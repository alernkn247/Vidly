@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@Html.ActionLink("Add New Movie", "New", null, new { @class = "btn btn-primary", @role = "button" })
@*<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("New", "Movies")'">New</button>*@
@*<div class = "btn btn-primary">@Html.ActionLink("New", "New", new { @class = "btn btn-primary" })</div>*@
<table class="table table-bordered table-hover">
    <tr>
        <th>@ViewBag.Title</th>
        <th colspan="3">Genre</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @movie.Name
            </td>
            <td>@movie.Genre.Name</td>
            <td> @Html.ActionLink("Edit", "Edit", new { id = movie.Id }, new { @class = "btn btn-primary", @role = "button", @style = "float: right;" })</td>
            <td>@Html.ActionLink("Details", "Details", new { id = movie.Id }, new { @class = "btn btn-primary", @role = "button", @style = "float: right;" })</td>
        </tr>
    }

</table>


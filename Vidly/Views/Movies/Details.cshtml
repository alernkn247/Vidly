@model  Vidly.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    @*<li>Release Date: @Model.ReleaseDate.Date.ToString("dddd, MMMM d, yyyy")</li>*@
    @if (Model.ReleaseDate.HasValue)
    {
        <li>Release Date: @Model.ReleaseDate.Value.Date.ToString("dddd, MMMM d, yyyy")</li>
    }

    <li>Date Added: @Model.CreatedDate.Date.ToString("dddd, MMMM d, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStocks</li>
</ul>

